{% extends 'base.html.twig' %}

{% block page_title 'My Profile' %}
{% block title 'My Profile' %}

{% block body %}
    {#
        Fixme afficher sous forme de <ul> <li>
        firstname
        lastname
        email
        birthday
        createAt
        updatedAt
    #}

    <ul>
        <li>First name: {{ app.user.firstname }}</li>
        <li>Last name: {{ app.user.lastname }}</li>
        <li>Email: {{ app.user.email }}</li>
        <li>Birthday: {{ app.user.birthday|date("F d, Y g:i") }}</li>
        <li>Created at: {{ app.user.createdAt|date("F d, Y g:i") }}</li>
        <li>Updated at: {{ app.user.updatedAt|date("F d, Y g:i") }}</li>
    </ul>
{% endblock %}
